<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %> 

        <!-- Display courses here -->
        <div class="instructor-body-div">
        <% if(firstName && lastName) { %> <!-- This is because Admin don't have first/last name -->
            <h2>Welcome <%= firstName %> <%= lastName %>!</h2>
        <% } else { %>
            <h2>Welcome Admin!</h2>
        <% } %>

          <br>
          <h3>Edit Courses</h3>
      
          <!-- Display courses here -->
          <% instructor_courses.forEach(course => { %>
              <div class="crud-forms">
                  <%= course.courseID %><strong> <%= course.name %></strong><br>
                  <%= course.description %><br>
                  Subject: <%= course.subject %><br>
                  Credits: <%= course.credits %><br>
                  Created by: <%= course.createdby %><br>
                  <div class="course-actions">
                      <a href="/instructor/edit/<%= course.name %>">Edit</a>
                      <a href="/instructor/delete/<%= course.name %>">Delete</a>
                  </div>
              </div>
              <hr>
          <% }); %>
      
          <!-- Add a link to the "Add Course" page -->
          <a href="/instructor/add-course">Add Course</a>
      </div>
    
    </div>
  <%- include('./partials/footer.ejs') %>
</body>
</html>